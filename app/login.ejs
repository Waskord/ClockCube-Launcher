<div id="loginContainer" style="display: none;">
    <!-- Заголовок -->
    <h1 class="loginTitle"><%- lang('login.loginTitle') %></h1>

    <!-- Вернуться назад 
     Появляется только если человек добавляет аккаунт-->
    <div id="loginCancelContainer" style="display: none;">
        <button id="loginCancelButton">
            <div id="loginCancelIcon">X</div>
            <span id="loginCancelText"><%- lang('login.loginCancelText') %></span>
        </button>
    </div>

    <!-- Авторизация -->
    <form id="loginForm">

        <!-- Ввод никнейма -->
        <div class="loginFieldContainer">
            <div class="field-group">
                <span id="loginEmailError" class="loginErrorSpan"><%- lang('login.loginEmailError') %></span>
                <input id="loginUsername" class="loginField" type="text" placeholder="<%- lang('login.loginNamePlaceholder') %>"/>
            </div>
            <div class="field-group">
                <span class="loginErrorSpan" id="loginPasswordError"><%- lang('login.loginPasswordError') %></span>
                <input id="loginPassword" class="loginField" type="password" placeholder="<%- lang('login.loginPasswordPlaceholder') %>"/>
            </div>
        </div>

    <div class="buttons">
        <!-- Кнопка залогиниться -->
        <button id="loginButton" class="customButton customButtonGreen" disabled><%- lang('login.loginButtonText') %></button>

        <!-- Ссылки на создание аккаунта и на сброс пароля -->
        <div class="auth-links">
            <a href="https://account.ely.by/register">Создать аккаунт</a> 
            /
            <a href="https://account.ely.by/login">Забыл пароль</a>
        </div>
        
    </div>
    </form>

    <script src="./assets/js/scripts/login.js"></script>
</div>